&control
    calculation = 'vc-relax'
    restart_mode='from_scratch',
prefix = 'qe3'
    tstress = .true.
    tprnfor = .true.
    pseudo_dir = '/users/kfg/psuedo/gbrv_1.5/',
!    pseudo_dir = '/home/kevin/psp/'
    outdir = '/tmp'
    disk_io = 'low'
    wf_collect = .true.
    verbosity = 'high'    
 /
&system
    ibrav=  0, 
   nat  = 4
    ntyp= 2
    ecutwfc= 45,
    ecutrho= 250,
